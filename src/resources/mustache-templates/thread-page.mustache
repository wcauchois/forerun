<div class="row title-container">
  <div class="span1"></div>
  <div class="span10">
    <h3>
      <a href="/thread/{{thread._id}}">{{thread.title}}</a>
    </h3>
  </div>
  <div class="span1"></div>
</div>

{{#posts}}
  <div class="row post-container">
    {{> postRow}}
  </div>
{{/posts}}

<div class="row" id="reply">
  <div class="span1"></div>
  <div class="span10">
    <a href="#reply" id="reply-button" class="btn btn-block btn-primary">Reply</a>
  </div>
  <div class="span1"></div>
</div>

<div class="row post-compose-container" id="compose">
  <div class="span1"></div>
  <div class="span10 compose-form" id="post-compose-form"></div>
  <div class="span1"></div>
</div>

<div class="row" style="height: 100px;"></div>

<script type="text/javascript">
  var currentPage = new forerun.views.ThreadPage({
    el: $('#page'),
    threadId: "{{thread._id}}",
    config: {{{config_json}}}
  }).render();
</script>

