<!DOCTYPE html>

<html>
  <head>
    <title>{{title}}</title>
    {{#styles}}
      <link href="{{{path}}}" type="text/css" rel="{{{rel}}}">
    {{/styles}}
    {{#clientTemplates}}
      <script type="text/template" data-name="{{name}}">
        {{{code}}}
      </script>
    {{/clientTemplates}}
    {{#scripts}}
      <script type="text/javascript" src="{{{path}}}"></script>
    {{/scripts}}
  </head>
  <body>
    <div id="page" class="container">
      {{#flash}}
        <div id="flash-message" class="row flash">
          <div class="span12 {{type}}-detail">
            <h5>{{message}}</h5>
            <span class="dismiss fui-cross-24"></span>
          </div>
        </div>
      {{/flash}}
      {{{content}}}
    </div>
  </body>
</html>

